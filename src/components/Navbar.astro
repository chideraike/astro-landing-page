---
import { Icon } from "astro-icon";
const navLinks = [
  {
    name: "Services",
    url: "#services",
    style: "transparent",
  },
  {
    name: "Reviews",
    url: "#reviews",
    style: "transparent",
  },
  {
    name: "Clients",
    url: "#clients",
    style: "transparent",
  },
  {
    name: "Pricing",
    url: "#pricing",
    style: "transparent",
  },
  {
    name: "Contact Us",
    url: "#",
    style: "primary",
  },
];
---

<nav>
  <div class="container nav-container">
    <a href="/">
      <Icon name="logo" width={225} class="logo" />
    </a>
    <div class="nav-wrapper">
      <button
        class="btn btn--menu"
        id="menu-btn"
        aria-expanded="false"
        aria-label="Open mobile navigation"
      >
        <Icon name="feather:menu" width={25} />
      </button>
      <ul class="nav-links" role="navigation">
        {navLinks.map(link => (
            <li role="none">
                <a href={link.url} class="btn btn--${link.style} nav-link">
                    {link.name}
                </a>
            </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
    const navBtn = document.querySelector("#menu-btn");
    navBtn.addEventListener('click', () => {
        navBtn.setAttribute('aria-expanded', navBtn.getAttribute('aria-expanded') === 'false' ? 'true' : 'false')
    })
</script>
